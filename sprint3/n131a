        "from sklearn.metrics import mean_absolute_error\n",
        "from sklearn.metrics import mean_squared_error\n",
        "def error(x, y, type) :\n",
        " if type == 'MSE':\n",
        "   return mean_squared_error(x,y)\n",
        " elif type == 'MAE':\n",
        "   return mean_absolute_error(x, y)\n"
      ],
